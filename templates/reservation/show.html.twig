{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Arrival</th>
                <td>{{ reservation.arrival ? reservation.arrival|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Leaving</th>
                <td>{{ reservation.leaving ? reservation.leaving|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Num_people</th>
                <td>{{ reservation.numPeople }}</td>
            </tr>
            <tr>
                <th>Num_rooms</th>
                <td>{{ reservation.numRooms }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reservation_index') }}">back to list</a>

    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
