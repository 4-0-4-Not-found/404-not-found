{% extends 'admindash.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>
    {% block tbody %}
        {% block breadcrumb1  %}{% endblock %}
<form method="post" action="{{ path('user_search') }}">
    <label>Search</label>
    <input type="text" class="form-group " name="search" placeholder="Search a client"><input type="submit" value="search" >
</form>
<div class="table-responsive">

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Username</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Email</th>
            <th>Telephone</th>
            <th>operations</th>
            <th>active</th>
        </tr>
        </thead>
        <tbody>

        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.tel }}</td>

                 <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
                <td>
                    <input type="checkbox" {% if user.validation %}checked {% endif %} onchange="changeValidation({{ user.id }})" data-toggle="toggle" data-size="xs">
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
</div>
    {% endblock %}
    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}

